<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_list_body_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:paddingLeft="4dip"
    android:paddingRight="10dip" >

    <TextView
        android:id="@+id/queueRowLabelFilename"
        android:layout_width="fill_parent"
        android:layout_height="28dip"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="2dip"
        android:paddingLeft="4dip"
        android:paddingTop="4dip"
        android:textColor="#000000"
        android:textSize="16dip" />

    <ImageView
        android:id="@+id/queueRowStatus"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_below="@id/queueRowLabelFilename"
        android:layout_marginRight="10dip"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:scaleType="matrix"
        android:src="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/queueRowLabelEta"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/queueRowLabelFilename"
        android:layout_toRightOf="@id/queueRowStatus"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/queueRowLabelCompleted"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignRight="@id/queueRowLabelFilename"
        android:layout_below="@id/queueRowLabelFilename"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

</RelativeLayout>