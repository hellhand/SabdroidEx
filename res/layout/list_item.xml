<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_list_body_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dip"
    android:paddingRight="12dip"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_bg">
    
    <TextView
        android:id="@+id/queueRowLabelFilename"
        android:layout_width="fill_parent"
        android:layout_height="28dip"
        android:paddingLeft="4dip"
        android:paddingTop="4dip"
        android:paddingBottom="2dip"
        android:textSize="16dip"
        android:textColor="#000000"
        android:maxLines="1"
        android:gravity="center_vertical"/>

	<ImageView
		android:id="@+id/queueRowStatus"
        android:layout_below="@id/queueRowLabelFilename"
       	android:src="@android:drawable/ic_media_play"
       	android:contentDescription="@string/app_name"
        android:scaleType="matrix"
       	android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/queueRowLabelEta"
        android:layout_below="@id/queueRowLabelFilename"
        android:layout_toRightOf="@id/queueRowStatus"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:gravity="center_vertical"
        android:textSize="12dip"
        android:textColor="#6a6a6a"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/queueRowLabelCompleted"
        android:layout_below="@id/queueRowLabelFilename"
        android:layout_alignRight="@id/queueRowLabelFilename"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:gravity="center_vertical"
        android:textSize="12dip"
        android:textColor="#6a6a6a"
        android:singleLine="true"/>
	
</RelativeLayout>
