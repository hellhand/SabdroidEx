<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_list_body_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/coming_show_name"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_marginTop="8dip"
        android:background="#333333"
        android:maxLines="1"
        android:paddingLeft="4dip"
        android:paddingTop="2dip"
        android:textColor="#FFFFFF"
        android:textSize="12dip"
        android:textStyle="bold" />

    <com.sabdroidex.utils.AspectRatioImageView
        android:id="@+id/coming_show_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_banner"
        android:contentDescription="@string/show_banner"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/coming_next_episode_"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/comming_next"
            android:textColor="#6a6a6a"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coming_next_episode"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#6a6a6a"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dip" >

        <TextView
            android:id="@+id/coming_airs_"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/comming_airs"
            android:textColor="#6a6a6a"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coming_airs"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#6a6a6a"
            android:textSize="12dip" />
    </LinearLayout>

</LinearLayout>