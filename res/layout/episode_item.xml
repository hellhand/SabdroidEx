<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/status_led"
        android:layout_width="10dip"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/episode_holder"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_toRightOf="@id/status_led"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/episode"
        android:textColor="#6a6a6a"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_toRightOf="@id/episode_holder"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="1"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/episode_name_holder"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_holder"
        android:layout_toRightOf="@id/status_led"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/episode_name"
        android:textColor="#6a6a6a"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_name"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_holder"
        android:layout_toRightOf="@id/episode_name_holder"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Something Wicked This Fae Comes"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/episode_airdate_holder"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_name_holder"
        android:layout_toRightOf="@id/status_led"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/episode_airdate"
        android:textColor="#6a6a6a"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_airdate"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_name_holder"
        android:layout_toRightOf="@id/episode_airdate_holder"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="2011-09-04"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/episode_quality_holder"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_airdate_holder"
        android:layout_toRightOf="@id/status_led"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/episode_quality"
        android:textColor="#6a6a6a"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_status"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/episode_airdate_holder"
        android:layout_toRightOf="@id/episode_quality_holder"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="720p WEB-DL"
        android:textColor="#6a6a6a"
        android:textSize="12dip" />

</RelativeLayout>