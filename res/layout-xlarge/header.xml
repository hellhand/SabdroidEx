<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <TableLayout
		android:id="@+id/statusBar"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#dddddd"
        android:paddingBottom="2dip"
        android:paddingTop="1dip" >

        <TableRow
            android:id="@+id/statusTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:text="@string/header_speed"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:text="@string/separator"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/headerSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_speed_format"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_free"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:text="@string/separator"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/freeSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="@string/header_free_format"
                android:textColor="#000000"
                android:textSize="14dip" />
        </TableRow>

        <TableRow
            android:id="@+id/statusMiddle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/textTimeleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:text="@string/header_time_left"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:text="@string/separator"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/headerEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_time_left_format"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_queue"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:text="@string/separator"
                android:textColor="#000000"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/headerDownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="@string/header_queue_format"
                android:textColor="#000000"
                android:textSize="14dip" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_shadow" />

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vpi__tab_selected_holo" />

</LinearLayout>